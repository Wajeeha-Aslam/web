
<html >
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
    <link rel="stylesheet" href="/css/logincss.css">
</head>


<body>
              <STYle>body {
              footer {
              display: none;
            }}
            .flash-message {
  color: red;
  font-weight: bold;
  margin-bottom: 15px;
  animation: flash 1s infinite;
}

@keyframes flash {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

            </STYle>
    
    <div class="container">
     <div class="login-box">
      <% if (error) { %>
    <div class="flash-message"><%= error %></div>
  <% } %>
     <h1> Admin Login</h1>
       <form method="POST" action="/admin/adminlogin">
        

        
         <label for="">Name</label>
        <input type="text"  required name="username"placeholder="Name">
         <label for="">Email</label>
        <input type="text"  required name="email"placeholder="E-mail">
         <label for="">Password</label>
        <input type="text" required name="password"placeholder="Password">
        <!-- <div class="forgot"><a href="#">Forgot your password?</a></div> -->
        <button type="submit">Login</button>
         
    </form>
       </div>
  </div>
</body>
