<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background: #f2f2f2;
      padding: 2rem;
    }

    .checkout-container {
      background: #fff;
      padding: 2rem;
      max-width: 900px;
      margin: auto;
      border-radius: 10px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
      color: #2d2d2d;
      margin-bottom: 1.5rem;
      font-size: 2rem;
      border-bottom: 2px solid #eee;
      padding-bottom: 0.5rem;
      text-align: center;
    }

    .product {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-bottom: 1.5rem;
      border-bottom: 1px solid #e2e2e2;
      padding-bottom: 1rem;
    }

    .product img {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    .product-info {
      flex: 1;
    }

    .product-name {
      font-weight: 600;
      font-size: 1.1rem;
    }

    .product-price,
    .product-qty {
      color: #666;
      font-size: 0.95rem;
    }

    .total {
      font-size: 1.2rem;
      font-weight: bold;
      text-align: right;
      margin-top: 1rem;
      color: #333;
    }

    .form-group {
      margin-top: 1.5rem;
    }

    label {
      display: block;
      margin-bottom: 0.3rem;
      font-weight: 500;
      color: #333;
    }

    input {
      width: 100%;
      padding: 0.6rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      transition: 0.3s;
    }

    input.invalid {
      border-color: #e74c3c;
      background-color: #fff1f0;
    }

    .error-message {
      color: #e74c3c;
      font-size: 0.9rem;
      display: none;
      margin-top: 0.2rem;
    }

    .error-message.visible {
      display: block;
    }

    button {
      margin-top: 2rem;
      width: 100%;
      padding: 12px;
      font-size: 1rem;
      background-color: #2d2d2d;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background-color: #444;
    }
  </style>
</head>
<body>
  <div class="checkout-container">
    <h1>Checkout - Order #<%= order._id %></h1>

    <% order.items.forEach(item => { %>
      <div class="product">
<!-- <img src="/upload/<%= item.productId.image %>" alt="Product Image"> -->
<img src="<%= item.image %>" alt="<%= item.name %>" width="100">
        <div class="product-info">
          <div class="product-name"><%= item.productId.name %></div>
          <div class="product-price">Price: $<%= item.productId.price %></div>
          <div class="product-qty">Quantity: <%= item.qty %></div>
        </div>
      </div>
    <% }) %>

    <p class="total"><strong>Total:</strong> $<%= order.total %></p>

    <form id="checkoutForm" action="/confirm-checkout" method="POST" novalidate>
      <input type="hidden" name="orderId" value="<%= order._id %>">

      <div class="form-group">
        <label for="name">Full Name:</label>
        <input type="text" name="name" id="name">
        <span class="error-message" id="name-error">Please enter your full name.</span>
      </div>

      <div class="form-group">
        <label for="address">Shipping Address:</label>
        <input type="text" name="address" id="address">
        <span class="error-message" id="address-error">Please enter your shipping address.</span>
      </div>

      <div class="form-group">
        <label for="payment">Payment Method:</label>
        <input type="text" name="payment" id="payment" placeholder="e.g. Credit Card, Cash on Delivery">
        <span class="error-message" id="payment-error">Please specify your payment method.</span>
      </div>

      <button type="submit">Confirm Order</button>
    </form>
    <div id="thankYouMessage" style="display:none; text-align:center; padding:2rem;">
  <h2 style="color:green;">✅ Thank you for your order!</h2>
  <p>We have received your request and will process it shortly.</p>
</div>
  </div>

  <script>
  const form = document.getElementById('checkoutForm');
  const thankYouMessage = document.getElementById('thankYouMessage');

  form.addEventListener('submit', function(e) {
    e.preventDefault(); // Prevent actual form submission

    let hasError = false;

    ['name', 'address', 'payment'].forEach(fieldId => {
      const input = document.getElementById(fieldId);
      const error = document.getElementById(fieldId + '-error');

      if (!input.value.trim()) {
        input.classList.add('invalid');
        error.classList.add('visible');
        hasError = true;
      } else {
        input.classList.remove('invalid');
        error.classList.remove('visible');
      }
    });

    if (!hasError) {
      form.style.display = 'none';
      thankYouMessage.style.display = 'block';
    }
  });
</script>


</body>
</html>
